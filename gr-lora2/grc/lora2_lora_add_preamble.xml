<?xml version="1.0"?>
<block>
  <name>LoRa Add Preamble</name>
  <key>lora2_lora_add_preamble</key>
  <category>[lora2]</category>
  <import>import lora2</import>
  <make>lora2.lora_add_preamble($pre_len, $sync_word, $len_tag_key, $sync_word_tag_key, $payload_tag_key)</make>
  <param>
    <name>Preamble length [6-65535]</name>
    <key>pre_len</key>
    <value>8</value>
    <type>int</type>
  </param>

  <param>
    <name>Sync word</name>
    <key>sync_word</key>
    <value>0x12</value>
    <type>int</type>
  </param>

  <param>
    <name>Length Tag Key</name>
    <key>len_tag_key</key>
    <value>"packet_len"</value>
    <type>string</type>
  </param>

  <param>
    <name>Sync Word Tag Key</name>
    <key>sync_word_tag_key</key>
    <value>"sync_word"</value>
    <type>string</type>
  </param>

  <param>
    <name>Payload Tag Key</name>
    <key>payload_tag_key</key>
    <value>"payload_start"</value>
    <type>string</type>
  </param>

  <sink>
    <name>in</name>
    <type>short</type>
    <vlen>1</vlen>
  </sink>

  <source>
    <name>out</name>
    <type>short</type>
    <vlen>1</vlen>
  </source>
</block>
