<?xml version="1.0"?>
<block>
  <name>CSS Modulator</name>
  <key>lora2_css_mod</key>
  <category>[lora2]</category>
  <import>import lora2</import>
  <make>lora2.css_mod($M, $interp, $len_tag_key)</make>
  <param>
    <name>M</name>
    <key>M</key>
	<type>int</type>
  </param>
  <param>
    <name>Interpolation</name>
    <key>interp</key>
	<type>int</type>
  </param>
  <param>
    <name>Length Tag Key</name>
    <key>len_tag_key</key>
	<type>string</type>
  </param>

  <sink>
    <name>in</name>
    <type>short</type>
  </sink>

  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
