<?xml version="1.0"?>
<block>
  <name>Gray Deindexer</name>
  <key>lora2_gray_deindexer</key>
  <category>[lora2]</category>
  <import>import lora2</import>
  <make>lora2.gray_deindexer($M)</make>

  <param>
    <name>M</name>
    <key>M</key>
    <type>int</type>
  </param>

  <sink>
    <name>in</name>
    <type>float</type>
	<vlen>$M</vlen>
  </sink>

  <source>
    <name>out</name>
    <type>float</type>
	<vlen>$M</vlen>
  </source>
</block>
