<?xml version="1.0"?>
<block>
  <name>LoRa Implicit Get Payload</name>
  <key>lora2_lora_implicit_get_payload</key>
  <category>[lora2]</category>
  <import>import lora2</import>
  <make>lora2.lora_implicit_get_payload($payload_len, $SF, $CR, $has_crc)</make>
  <param>
	<name>Payload length (bytes)</name>
    <key>payload_len</key>
    <type>int</type>
  </param>

  <param>
	<name>SF</name>
    <key>SF</key>
    <type>int</type>
  </param>

  <param>
	<name>CR</name>
    <key>CR</key>
    <type>int</type>
  </param>

  <param>
	<name>Has CRC</name>
    <key>has_crc</key>
    <type>bool</type>
  </param>

  <sink>
    <name>in</name>
    <type>short</type>
  </sink>

  <source>
    <name>out</name>
    <type>short</type>
  </source>
</block>
